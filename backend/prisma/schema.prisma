generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  gmail      String      @unique
  username   String
  password   String
  expenses   Expense[]
  debtLends  DebtLend[]  // âœ… Relation to new model
}

model Expense {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  amount    Float
  category  String
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DebtLend {
  id              Int       @id @default(autoincrement())
  user            User      @relation(fields: [userId], references: [id])
  userId          Int
  personOfInterest String
  date            DateTime
  amount          Float
  note            String?
  type            String    // "Debt" or "Lend"
  status          String    @default("uncleared") // "cleared" or "uncleared"
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}