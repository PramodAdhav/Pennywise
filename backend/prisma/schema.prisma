generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  gmail    String    @unique
  username String
  password String
  expenses Expense[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  amount    Float
  category  String
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}